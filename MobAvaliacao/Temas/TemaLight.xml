<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobAvaliacao.TemaLight">

	<Color x:Key="PageBackgroundColor">White</Color>
	<Color x:Key="NavigationBarColor">#DCDCDC</Color>
	<Color x:Key="ShellBarColor">#DCDCDC</Color>

	<Color x:Key="UnselectedColor">Gray</Color>
	<Color x:Key="TabUnselectedColor">#595959</Color>
	<Color x:Key="DisabledColor">#9E9E9E</Color>
	<Color x:Key="DisabledColorButton">#FF6347</Color>

	<Color x:Key="PrimaryColor">WhiteSmoke</Color>
	<Color x:Key="SecondaryColor">Black</Color>
	<Color x:Key="TertiaryColor">#C0C0C0</Color>
	<Color x:Key="QuartenaryColor">Red</Color>

	<Color x:Key="PrimaryTextColor">Black</Color>
	<Color x:Key="SecondaryTextColor">White</Color>
	<Color x:Key="TertiaryTextColor">Gray</Color>

	<Color x:Key="TransparentColor">Transparent</Color>

	<Style x:Key="ModoApp"
           TargetType="Image">
		<Setter Property="Source"
                Value="mododark"/>
	</Style>
</ResourceDictionary>